<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo-container">
        <a href="/">
          <img src="https://cdn.glitch.global/2679bf09-2c70-4505-a2a8-7f4966f413aa/DALLE2024-12-1316.28.03-AnexquisiteandcreativelogoforTasteTrailsafoodandtravelblog.Thedesignintegratesacircularglobeinsoftpasteltonessymbolizingtra-ezgif.com-webp-to-jpg-converter.jpg?v=1734125364737" alt="TasteTrails Logo">
        </a>
        <a href="/" class="logo">TasteTrails</a>
      </div>
      <ul class="nav-links">
        <li><a href="/explore">Explore</a></li>
        <li><a href="/blogs/create">Create Blog</a></li>
        <li><a href="/profile">My Profile</a></li>
        <li><a href="/edit-profile" id="edit-profile-btn">Edit Profile</a></li>
        <li><a href="/auth/logout" class="btn-signup">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Profile Content -->
  <main>
    <!-- Welcome Section -->
    <section class="profile-details">
      <h1 class="highlight-title">Welcome, <span class="username"><%= user.username %></span>!</h1>
    </section>

    <!-- Edit Profile Form -->
    <section class="edit-profile-section hidden" id="edit-profile-section">
      <h2>Edit Profile</h2>
      <form method="POST" action="/profile" enctype="multipart/form-data">
        <div class="form-group">
          <label for="profile-photo">Profile Photo</label>
          <input type="file" name="profilePhoto" id="profile-photo">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" value="<%= user.username %>" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" value="<%= user.email %>" required>
        </div>
        <div class="form-buttons">
          <button type="submit" class="btn-primary">Save Changes</button>
          <a href="#" class="btn-cancel" id="cancel-edit-btn">Cancel</a>
        </div>
      </form>
    </section>
  </main>
              
  
  <!-- Footer -->
  <footer>
    <p>&copy; 2024 TasteTrails. Crafted with love for food and travel enthusiasts.</p>
    <ul class="social-links">
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Instagram</a></li>
      <li><a href="#">Twitter</a></li>
    </ul>
  </footer>

  <!-- Script for toggling Edit Profile Section -->
  <script>
    $(document).ready(() => {
      $("#edit-profile-btn").on("click", () => {
        $("#edit-profile-section").slideDown();
      });

      $("#cancel-edit-btn").on("click", (e) => {
        e.preventDefault();
        $("#edit-profile-section").slideUp();
      });
    });
  </script>
</body>
</html>
