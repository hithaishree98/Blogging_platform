<%- include('layout', {
  title: `Delete Blog - ${blog.title}`,
  body: `
    <section class="form-container">
      <h1>Delete Blog</h1>
      <p>Are you sure you want to delete the blog titled "<strong>${blog.title}</strong>"?</p>
      <form method="POST" action="/blogs/${blog._id}/delete" class="delete-form">
        <button type="submit" class="btn-secondary">Yes, Delete</button>
        <a href="/blogs/${blog._id}" class="btn-secondary">Cancel</a>
      </form>
      <!-- Adding space between the Delete and Cancel buttons -->
    </section>
  `
}) %>

app.get('/blogs/:id/delete', isAuthenticated, async (req, res) => {
  try {
    const blog = await Blog.findById(req.params.id);
    if (!blog) {
      return res.status(404).send('Blog not found');
    }

    // Pass user and blog data to the template
    res.render('delete', {
      blog: blog,
      user: req.session.user  // Assuming the user's session contains 'user' data
    });
  } catch (err) {
    console.error('Error fetching blog:', err);
    res.status(500).send('Error fetching blog');
  }
});
