<%- include('layout', {
  title: `Delete Blog - ${blog.title}`,
  body: `
    <section class="form-container">
      <h1>Delete Blog</h1>
      <p>Are you sure you want to delete the blog titled "<strong>${blog.title}</strong>"?</p>
      <form method="POST" action="/blogs/${blog._id}/delete" class="delete-form">
        <button type="submit" class="btn-primary">Yes, Delete</button>
      </form>
      <!-- Adding space between the Delete and Cancel buttons -->
      <a href="/blogs/${blog._id}" class="btn-primary">Cancel</a>
    </section>
  `
}) %>


<%- include('layout', {
  title: blog.title,
  body: `
    <section class="blog-details">
      <h1>${blog.title}</h1>
      <img src="${blog.imageUrl || 'https://via.placeholder.com/800x400'}" alt="${blog.title}" class="blog-image">
      <p class="blog-meta">
        <strong>Destination:</strong> ${blog.destination} |
        <strong>Rating:</strong> ${blog.rating} |
        <strong>Likes:</strong> ${blog.likes}
      </p>
      <p>${blog.content}</p>
      <p><small>Published on: ${new Date(blog.createdAt).toDateString()}</small></p>
      <a href="/blogs/${blog._id}/edit" class="btn-primary">Edit</a>
      <a href="/explore" class="btn-primary">Back to Explore</a>
      <a href="/blogs/${blog._id}/delete" class="btn-primary">Delete</a>
      <a href="/blogs/${blog._id}/save" class="btn-primary">Save</a>
    </section>
  `
}) %>