<%- include('layout', {
  title: error ? 'Access Denied' : `Delete Blog - ${blog ? blog.title : ''}`,
  body: `
    <section class="form-container" id="delete-blog-section">
      ${
        error 
          ? `
            <h1 class="error-title">Access Denied</h1>
            <p class="error-message">${error}</p>
            <div class="delete-buttons">
              <a href="/blogs/${blog._id}" class="btn-cancel">Go Back</a>
            </div>`
          : `
            <p class="delete-message">Are you sure you want to delete the blog titled "<strong>${blog.title}</strong>"?</p>
            <div class="delete-buttons">
              <form method="POST" action="/blogs/${blog._id}/delete" class="delete-form">
                <button type="submit" class="btn-delete">Yes, Delete</button>
              </form>
              <a href="/blogs/${blog._id}" class="btn-cancel">Cancel</a>
            </div>
          `
      }
    </section>
  `
}) %>
