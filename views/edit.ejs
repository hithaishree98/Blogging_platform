<%- include('layout', {
  title: `Edit Blog - ${blog.title}`,
  body: `
    <section class="header">
      <h1>Edit Blog</h1>
    </section>

    <section class="edit-form">
      <form method="POST" action="/blogs/${blog._id}/edit">
        <div>
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" value="${blog.title}" required>
        </div>
        <div>
          <label for="content">Content:</label>
          <textarea id="content" name="content" required>${blog.content}</textarea>
        </div>
        <div>
          <label for="destination">Destination:</label>
          <input type="text" id="destination" name="destination" value="${blog.destination}" required>
        </div>
        <div>
          <label for="imageUrl">Image URL:</label>
          <input type="text" id="imageUrl" name="imageUrl" value="${blog.imageUrl}">
        </div>
        <button type="submit" class="btn-primary">Update Blog</button>
        <a href="/blogs/${blog._id}" class="btn-secondary">Cancel</a>
      </form>
    </section>
  `
}) %>
