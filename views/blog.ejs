<%- include('layout', { title: 'Explore | TasteTrails' }) %>

<section class="header">
  <h1>Explore TasteTrails</h1>
  <p>Find the best blogs, destinations, and food recommendations here.</p>
  <form class="search-filter" method="GET" action="/blogs/search">
    <input type="text" name="query" placeholder="Search for blogs or destinations...">
    <button class="btn-primary" type="submit">Search</button>
  </form>
</section>

<section class="content-grid">
  <% blogs.forEach((blog) => { %>
    <div class="content-item">
      <img src="https://via.placeholder.com/300x200" alt="<%= blog.title %>">
      <h3><%= blog.title %></h3>
      <p><%= blog.content.substring(0, 100) %>...</p>
      <p><strong>Destination:</strong> <%= blog.destination %></p>
      <p><strong>Rating:</strong> <%= blog.Rating %> / 5</p>
      <p><strong>Likes:</strong> <%= blog.likes %></p>
      <a href="/blogs/<%= blog._id %>" class="btn-secondary">Read More</a>
    </div>
  <% }) %>
</section>
