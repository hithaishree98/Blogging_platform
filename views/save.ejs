<%- include('layout', {
  title: `Saved Blog - ${blog.title}`,
  body: `
    <section class="form-container">
      <h1>Saved Blog</h1>
      <p>Are you sure you want to save the blog titled "<strong>${blog.title}</strong>"?</p>
      <form method="POST" action="/blogs/${blog._id}/save" class="save-form">
        <button type="submit" class="btn-primary">Yes, Save</button>
      </form>
      <!-- Adding space between the Delete and Cancel buttons -->
      <a href="/blogs/${blog._id}" class="btn-primary">Cancel</a>
    </section>
  `
}) %>
