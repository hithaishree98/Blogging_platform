<%- include('layout', {
  title: `Saved Blog - ${blog.title}`,
  body: `
    <section class="form-container" id="save-blog-section">
      <h1>Save Blog</h1>
      <p>Are you sure you want to save the blog titled "<strong>${blog.title}</strong>"?</p>
      <div class="save-buttons">
        <form method="POST" action="/blogs/${blog._id}/save" class="save-form">
          <button type="submit" class="btn-save">Yes, Save</button>
        </form>
        <a href="/blogs/${blog._id}" class="btn-cancel">Cancel</a>
      </div>
    </section>
  `
}) %>
