<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/profile.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="profile-container">
        <header class="header">
            <div class="logo-container">
                <a href="/">
                    <img src="https://cdn.glitch.global/2679bf09-2c70-4505-a2a8-7f4966f413aa/DALLE2024-12-1316.28.03-AnexquisiteandcreativelogoforTasteTrailsafoodandtravelblog.Thedesignintegratesacircularglobeinsoftpasteltonessymbolizingtra-ezgif.com-webp-to-jpg-converter.jpg?v=1734125364737" alt="Logo" class="logo">
                </a>
            </div>
            <nav class="nav-links">
                <a href="/">Home</a>
                <a href="/blogs">Blogs</a>
                <a href="/auth/logout">Logout</a>
            </nav>
        </header>

        <main>
            <section class="profile-details">
                <h1>Welcome, <span id="username"><%= user.username %></span>!</h1>
                <div class="profile-info">
                    <p><strong>Name:</strong> <span id="name"><%= user.name %></span></p>
                    <p><strong>Email:</strong> <span id="email"><%= user.email %></span></p>
                    <button id="edit-profile-btn" class="btn">Edit Profile</button>
                </div>
            </section>

            <section class="saved-blogs">
                <h2>Saved Blogs</h2>
                <ul id="blog-list">
                    <% user.savedBlogs.forEach(blog => { %>
                        <li><%= blog.title %></li>
                    <% }) %>
                </ul>
            </section>
        </main>
    </div>

    <!-- Edit Profile Modal -->
    <div id="edit-profile-modal" class="modal hidden">
        <div class="modal-content">
            <h2>Edit Profile</h2>
            <form id="edit-profile-form">
                <div class="form-group">
                    <label for="edit-name">Name</label>
                    <input type="text" id="edit-name" name="name" value="<%= user.name %>" required>
                </div>
                <div class="form-group">
                    <label for="edit-email">Email</label>
                    <input type="email" id="edit-email" name="email" value="<%= user.email %>" required>
                </div>
                <div class="modal-buttons">
                    <button type="submit" class="btn">Save Changes</button>
                    <button type="button" class="btn cancel-btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(() => {
            const $editProfileModal = $('#edit-profile-modal');
            const $editProfileBtn = $('#edit-profile-btn');
            const $cancelBtn = $('.cancel-btn');

            // Open the modal
            $editProfileBtn.on('click', () => {
                $editProfileModal.removeClass('hidden');
            });

            // Close the modal
            $cancelBtn.on('click', () => {
                $editProfileModal.addClass('hidden');
            });

            // Handle profile update
            $('#edit-profile-form').on('submit', function (e) {
                e.preventDefault(); // Prevent page reload
                const formData = $(this).serialize();

                $.ajax({
                    url: '/profile',
                    method: 'PUT',
                    data: formData,
                    success: (response) => {
                        alert(response.message);
                        location.reload(); // Reload the page to show updated data
                    },
                    error: (error) => {
                        alert(`Error: ${error.responseJSON.message}`);
                    }
                });
            });
        });
    </script>
</body>
</html>
