<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo-container">
        <a href="/">
          <img src="https://cdn.glitch.global/logo.jpg" alt="TasteTrails Logo">
        </a>
        <a href="/" class="logo">TasteTrails</a>
      </div>
      <ul class="nav-links">
        <li><a href="/explore">Explore</a></li>
        <li><a href="/blogs/create">Create Blog</a></li>
        <li><a href="/profile">My Profile</a></li>
        <li><a href="#" id="edit-profile-btn">Edit Profile</a></li>
        <li><a href="/auth/logout" class="btn-signup">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Profile Content -->
  <main>
    <!-- Welcome Section -->
    <section class="profile-details">
      <h1>Welcome, <span class="highlight"><%= user.username %></span>!</h1>
    </section>

    <!-- Saved Blogs -->
    <section class="content-grid">
      <h2>Saved Blogs</h2>
      <div class="blog-list">
        <% if (user.savedBlogs && user.savedBlogs.length > 0) { %>
          <% user.savedBlogs.forEach(blog => { %>
            <div class="blog-card">
              <img src="<%= blog.imageUrl || 'https://via.placeholder.com/300x200' %>" alt="<%= blog.title %>">
              <h3><%= blog.title %></h3>
              <p><%= blog.content.substring(0, 100) %>...</p>
              <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>You haven't saved any blogs yet.</p>
        <% } %>
      </div>
    </section>

    <!-- My Blogs -->
    <section class="content-grid">
      <h2>My Blogs</h2>
      <div class="blog-list">
        <% if (user.myBlogs && user.myBlogs.length > 0) { %>
          <% user.myBlogs.forEach(blog => { %>
            <div class="blog-card">
              <img src="<%= blog.imageUrl || 'https://via.placeholder.com/300x200' %>" alt="<%= blog.title %>">
              <h3><%= blog.title %></h3>
              <p><%= blog.content.substring(0, 100) %>...</p>
              <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>You haven't created any blogs yet.</p>
        <% } %>
      </div>
    </section>

    <!-- Edit Profile Form -->
    <section class="edit-profile-section hidden" id="edit-profile-section">
      <h2>Edit Profile</h2>
      <form method="POST" action="/profile" enctype="multipart/form-data">
        <div class="form-group">
          <label for="profile-photo">Profile Photo</label>
          <input type="file" name="profilePhoto" id="profile-photo">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" value="<%= user.username %>" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" value="<%= user.email %>" required>
        </div>
        <div class="form-buttons">
          <button type="submit" class="btn-primary">Save Changes</button>
          <a href="#" class="btn-cancel" id="cancel-edit-btn">Cancel</a>
        </div>
      </form>
    </section>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 TasteTrails. Crafted with love for food and travel enthusiasts.</p>
    <ul class="social-links">
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Instagram</a></li>
      <li><a href="#">Twitter</a></li>
    </ul>
  </footer>

  <!-- Script for toggling Edit Profile Section -->
  <script>
    $(document).ready(() => {
      $("#edit-profile-btn").on("click", () => {
        $("#edit-profile-section").slideDown();
      });

      $("#cancel-edit-btn").on("click", (e) => {
        e.preventDefault();
        $("#edit-profile-section").slideUp();
      });
    });
  </script>
</body>
</html>
