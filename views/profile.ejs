<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo-container">
        <a href="/">
          <img src="https://cdn.glitch.global/4b76aa4c-4fcc-4ec2-acff-1ec1977befae/Screenshot%202025-05-10%20140940.png?v=1746900643906" alt="TasteTrails Logo">
        </a>
        <a href="/" class="logo">Roam&Relish</a>
      </div>
      <ul class="nav-links">
        <li><a href="/explore">Explore</a></li>
        <li><a href="/blogs/create">Create Blog</a></li>
        <li><a href="/profile">My Profile</a></li>
        <li><a href="/profile/edit" id="edit-profile-btn">Edit Profile</a></li>
        <li><a href="/auth/logout" class="btn-signup">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Profile Content -->
  <main>
    <!-- Welcome Section -->
    <section class="profile-details">
      <h1 class="highlight-title">Welcome, <span class="username"><%= user.username %></span>!</h1>
    </section>

    <!-- Saved Blogs -->
    <section class="content-grid">
      <h2 class="highlight-title">Saved Blogs</h2>
      <div class="blog-list">
        <% if (user.savedBlogs && user.savedBlogs.length > 0) { %>
          <% user.savedBlogs.forEach(blog => { %>
            <div class="blog-card">
              <img src="<%= blog.imageUrl || 'https://via.placeholder.com/300x200' %>" alt="<%= blog.title %>">
              <h3><%= blog.title %></h3>
              <p><%= blog.content.substring(0, 100) %>...</p>
              <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>You haven't saved any blogs yet.</p>
        <% } %>
      </div>
    </section>

    <!-- My Blogs -->
    <section class="content-grid">
      <h2 class="highlight-title">My Blogs</h2>
      <div class="blog-list">
        <% if (user.myBlogs && user.myBlogs.length > 0) { %>
          <% user.myBlogs.forEach(blog => { %>
            <div class="blog-card">
              <img src="<%= blog.imageUrl || 'https://via.placeholder.com/300x200' %>" alt="<%= blog.title %>">
              <h3><%= blog.title %></h3>
              <p><%= blog.content.substring(0, 100) %>...</p>
              <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>You haven't created any blogs yet.</p>
        <% } %>
      </div>
    </section>
  </main>
              
  
  <!-- Footer -->
  <footer>
    <p>&copy; 2024 Roam&Relish. Crafted with love for food and travel enthusiasts.</p>
    <ul class="social-links">
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Instagram</a></li>
      <li><a href="#">Twitter</a></li>
    </ul>
  </footer>
</body>
</html>
