<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo-container">
        <a href="/">
          <img src="https://cdn.glitch.global/2679bf09-2c70-4505-a2a8-7f4966f413aa/DALLE2024-12-1316.28.03-AnexquisiteandcreativelogoforTasteTrailsafoodandtravelblog.Thedesignintegratesacircularglobeinsoftpasteltonessymbolizingtra-ezgif.com-webp-to-jpg-converter.jpg?v=1734125364737" alt="TasteTrails Logo">
        </a>
        <a href="/" class="logo">TasteTrails</a>
      </div>
      <ul class="nav-links">
        <li><a href="/explore">Explore</a></li>
        <li><a href="/blogs/create">Create Blog</a></li>
        <li><a href="/profile" class="active">My Profile</a></li>
        <li><a href="javascript:void(0);" id="edit-profile-link">Edit Profile</a></li>
        <li><a href="/auth/logout" class="btn-signup">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <section class="profile-container">
      <h1>Welcome, <span class="highlight"><%= user.username %></span>!</h1>
      
      <!-- Saved Blogs Section -->
      <section id="saved-blogs">
        <h2>Saved Blogs</h2>
        <div class="content-grid">
          <% if (user.savedBlogs && user.savedBlogs.length > 0) { %>
            <% user.savedBlogs.forEach(blog => { %>
              <div class="content-card">
                <img src="<%= blog.thumbnail || 'https://via.placeholder.com/300x200' %>" alt="Blog Thumbnail">
                
                <h3><%= blog.title %></h3>
                <p><%= blog.content.substring(0, 100) %>...</p>
                <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
              </div>
            <% }) %>
          <% } else { %>
            <p>No saved blogs yet.</p>
          <% } %>
        </div>
      </section>

      <!-- My Blogs Section -->
      <section id="my-blogs">
        <h2>My Blogs</h2>
        <div class="content-grid">
          <% if (user.myBlogs && user.myBlogs.length > 0) { %>
            <% user.myBlogs.forEach(blog => { %>
              <div class="content-card">
                <img src="<%= blog.thumbnail || 'https://via.placeholder.com/300x200' %>" alt="Blog Thumbnail">
                <h3><%= blog.title %></h3>
                <p><%= blog.content.substring(0, 100) %>...</p>
                <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
              </div>
            <% }) %>
          <% } else { %>
            <p>You haven't created any blogs yet.</p>
          <% } %>
        </div>
      </section>

      <!-- Edit Profile Form -->
      <section id="edit-profile" class="hidden">
        <h2>Edit Profile</h2>
        <form method="POST" action="/profile" enctype="multipart/form-data">
          <div class="form-group">
            <label for="profile-photo">Profile Photo</label>
            <input type="file" name="profilePhoto" id="profile-photo">
          </div>
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" value="<%= user.username %>" required>
          </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" value="<%= user.name %>" required>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" value="<%= user.email %>" required>
          </div>
          <div class="form-buttons">
            <button type="submit" class="btn-primary">Save Changes</button>
            <a href="javascript:void(0);" class="btn-cancel" id="cancel-edit">Cancel</a>
          </div>
        </form>
      </section>
    </section>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 TasteTrails. Crafted with love for food and travel enthusiasts.</p>
    <ul class="social-links">
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Instagram</a></li>
      <li><a href="#">Twitter</a></li>
    </ul>
  </footer>

  <script>
    // Toggle Edit Profile Section
    $('#edit-profile-link').click(() => {
      $('#saved-blogs, #my-blogs').addClass('hidden');
      $('#edit-profile').removeClass('hidden');
    });

    $('#cancel-edit').click(() => {
      $('#edit-profile').addClass('hidden');
      $('#saved-blogs, #my-blogs').removeClass('hidden');
    });
  </script>
</body>
</html>
