<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/profile.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="profile-container">
        <header class="header">
            <div class="logo-container">
                <a href="/">
                    <img src="https://cdn.glitch.global/2679bf09-2c70-4505-a2a8-7f4966f413aa/DALLE2024-12-1316.28.03-AnexquisiteandcreativelogoforTasteTrailsafoodandtravelblog.Thedesignintegratesacircularglobeinsoftpasteltonessymbolizingtra-ezgif.com-webp-to-jpg-converter.jpg?v=1734125364737" alt="Logo" class="logo">
                </a>
            </div>
            <nav class="nav-links">
                <a href="javascript:void(0);" id="edit-profile-link">Profile</a>
                <a href="/Explore">Explore</a>
                <a href="/auth/logout">Logout</a>
            </nav>
        </header>

        <main>
            <section class="profile-details" id="profile-details">
                <h1>Welcome, <span id="username"><%= user.username %></span>!</h1>
                <!-- The button to toggle Edit Profile form -->
            </section>

            <section class="saved-blogs">
                <h2>Saved Blogs</h2>
                <ul id="blog-list">
                    <% if (user.savedBlogs && user.savedBlogs.length > 0) { %>
                        <% user.savedBlogs.forEach(blog => { %>
                            <li><%= blog.title %></li>
                        <% }) %>
                    <% } else { %>
                        <li>No saved blogs</li>
                    <% } %>
                </ul>
            </section>
                          
            <section class="my-blogs">
                <h2>My Blogs</h2>
                <ul id="my-blog-list">
                    <% if (user.myBlogs && user.myBlogs.length > 0) { %>
                        <% user.myBlogs.forEach(blog => { %>
                            <li><%= blog.title %></li>
                        <% }) %>
                    <% } else { %>
                        <li>No blogs written</li>
                    <% } %>
                </ul>
            </section>
                       
            <section class="edit-profile-section hidden" id="edit-profile-section">
                <h2>Edit Profile</h2>
                <form id="edit-profile-form" action="/profile" method="POST">
                    <div class="form-group">
                        <label for="edit-name">Name</label>
                        <input type="text" id="edit-name" name="name" value="<%= user.name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-email">Email</label>
                        <input type="email" id="edit-email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="form-buttons">
                        <button type="submit" class="btn">Save Changes</button>
                        <a href="javascript:void(0);" class="btn cancel-btn" id="cancel-edit-btn">Cancel</a>
                    </div>
                </form>
            </section>              
                          
        </main>
    </div>

    

    <script>
        $(document).ready(() => {
            const $editProfileLink = $('#edit-profile-link');
            const $editProfileSection = $('#edit-profile-section');
            const $profileDetails = $('#profile-details');
            const $cancelEditBtn = $('#cancel-edit-btn');
            const $editProfileForm = $('#edit-profile-form');

            // Open the modal
            $editProfileLink.on('click', () => {
                $editProfileSection.removeClass('hidden');  // Show the edit form
                $profileDetails.addClass('hidden');  // Hide the profile details section
            });

            // Close the modal
            $cancelEditBtn.on('click', () => {
                $editProfileSection.addClass('hidden');  // Hide the edit form
                $profileDetails.removeClass('hidden');  // Show the profile details section
            });


            // Handle profile update
            $('#edit-profile-form').on('submit', function (e) {
                e.preventDefault(); // Prevent page reload
                const formData = $(this).serialize();

                $.ajax({
                    url: '/profile',
                    method: 'PUT',
                    data: formData,
                    success: (response) => {
                        alert(response.message);
                        location.reload(); // Reload the page to show updated data
                    },
                    error: (error) => {
                        alert(`Error: ${error.responseJSON.message}`);
                    }
                });
            });
        });
    </script>
</body>
</html>
