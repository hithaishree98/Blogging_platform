<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo-container">
        <a href="/">
          <img src="https://cdn.glitch.global/2679bf09-2c70-4505-a2a8-7f4966f413aa/DALLE2024-12-1316.28.03-AnexquisiteandcreativelogoforTasteTrailsafoodandtravelblog.Thedesignintegratesacircularglobeinsoftpasteltonessymbolizingtra-ezgif.com-webp-to-jpg-converter.jpg?v=1734125364737" alt="TasteTrails Logo">
        </a>
        <a href="/" class="logo">TasteTrails</a>
      </div>
      <ul class="nav-links">
        <li><a href="/explore">Explore</a></li>
        <li><a href="/blogs/create">Create Blog</a></li>
        <li><a href="/profile">My Profile</a></li>
        <li><a href="javascript:void(0);" id="edit-profile-link">Edit Profile</a></li>
        <li><a href="/auth/logout" class="btn-signup">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Page Content -->
  <main class="profile-page">
    <!-- Welcome Message -->
    <section class="profile-details" id="profile-details">
      <h1>Welcome, <span class="highlight"><%= user.username %></span>!</h1>
    </section>

    <!-- Saved Blogs -->
    <section class="content-grid" id="saved-blogs">
      <h2>Saved Blogs</h2>
      <div class="blog-list">
        <% if (user.savedBlogs && user.savedBlogs.length > 0) { %>
          <% user.savedBlogs.forEach(blog => { %>
            <div class="blog-card">
              <img src="<%= blog.imageUrl || 'https://via.placeholder.com/300x200' %>" alt="<%= blog.title %>">
              <h3><%= blog.title %></h3>
              <p><%= blog.content.substring(0, 100) %>...</p>
              <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>No saved blogs yet.</p>
        <% } %>
      </div>
    </section>

    <!-- My Blogs -->
    <section class="content-grid" id="my-blogs">
      <h2>My Blogs</h2>
      <div class="blog-list">
        <% if (user.myBlogs && user.myBlogs.length > 0) { %>
          <% user.myBlogs.forEach(blog => { %>
            <div class="blog-card">
              <img src="<%= blog.imageUrl || 'https://via.placeholder.com/300x200' %>" alt="<%= blog.title %>">
              <h3><%= blog.title %></h3>
              <p><%= blog.content.substring(0, 100) %>...</p>
              <a href="/blogs/<%= blog._id %>" class="btn-primary">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>No blogs created yet.</p>
        <% } %>
      </div>
    </section>

    <!-- Edit Profile Form -->
    <section id="edit-profile" class="hidden">
      <h2>Edit Profile</h2>
      <form method="POST" action="/profile" enctype="multipart/form-data">
        <div class="form-group">
          <label for="profile-photo">Profile Photo</label>
          <input type="file" name="profilePhoto" id="profile-photo">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" value="<%= user.username %>" required>
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" value="<%= user.name %>" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" value="<%= user.email %>" required>
        </div>
        <div class="form-buttons">
          <button type="submit" class="btn-primary">Save Changes</button>
          <a href="javascript:void(0);" class="btn-cancel" id="cancel-edit">Cancel</a>
        </div>
      </form>
    </section>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 TasteTrails. Crafted with love for food and travel enthusiasts.</p>
    <ul class="social-links">
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Instagram</a></li>
      <li><a href="#">Twitter</a></li>
    </ul>
  </footer>

  <!-- JavaScript -->
  <script>
    $(document).ready(() => {
      const $editProfileSection = $('#edit-profile');
      const $profileDetails = $('#profile-details');
      const $savedBlogs = $('#saved-blogs');
      const $myBlogs = $('#my-blogs');

      // Show Edit Profile Section
      $('#edit-profile-link').on('click', () => {
        $editProfileSection.removeClass('hidden');
        $profileDetails.addClass('hidden');
        $savedBlogs.addClass('hidden');
        $myBlogs.addClass('hidden');
      });

      // Cancel Edit Profile
      $('#cancel-edit').on('click', () => {
        $editProfileSection.addClass('hidden');
        $profileDetails.removeClass('hidden');
        $savedBlogs.removeClass('hidden');
        $myBlogs.removeClass('hidden');
      });
    });
  </script>
</body>
</html>
