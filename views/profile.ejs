<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo-container">
        <a href="/">
          <img src="https://cdn.glitch.global/2679bf09-2c70-4505-a2a8-7f4966f413aa/DALLE2024-12-1316.28.03-AnexquisiteandcreativelogoforTasteTrailsafoodandtravelblog.Thedesignintegratesacircularglobeinsoftpasteltonessymbolizingtra-ezgif.com-webp-to-jpg-converter.jpg?v=1734125364737" alt="TasteTrails Logo">
        </a>
        <a href="/" class="logo">TasteTrails</a>
      </div>
      <ul class="nav-links">
        <li><a href="javascript:void(0);" id="profile-nav-link">Profile</a></li>
        <li><a href="/Explore">Explore</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Page Content -->
  <main>
            <section class="profile-details" id="profile-details">
                <h1>Welcome, <span id="username"><%= user.username %></span>!</h1>
                <!-- The button to toggle Edit Profile form -->
            </section>

            <section class="saved-blogs" id="saved-blogs">
                <h2>Saved Blogs</h2>
                <ul id="blog-list">
                    <% if (user.savedBlogs && user.savedBlogs.length > 0) { %>
                        <% user.savedBlogs.forEach(blog => { %>
                            <li><%= blog.title %></li>
                        <% }) %>
                    <% } else { %>
                        <li>No saved blogs</li>
                    <% } %>
                </ul>
            </section>
                          
            <section class="my-blogs" id="my-blogs">
                <h2>My Blogs</h2>
                <ul id="my-blog-list">
                    <% if (user.myBlogs && user.myBlogs.length > 0) { %>
                        <% user.myBlogs.forEach(blog => { %>
                            <li><%= blog.title %></li>
                        <% }) %>
                    <% } else { %>
                        <li>No blogs written</li>
                    <% } %>
                </ul>
            </section>
                       
            <!-- Hidden Edit Profile Form -->
            <section class="edit-profile-section hidden" id="edit-profile-section">
                <h2>Edit Profile</h2>
                <form id="edit-profile-form" action="/profile" method="POST">
                    <div class="form-group">
                        <label for="edit-profile-photo">Profile Photo</label>
                        <!-- Display current profile picture -->
                        <img id="profile-picture-preview" src="<%= user.profilePhoto || '/images/default-profile.jpg' %>" alt="Profile Picture">
                        <input type="file" id="edit-profile-photo" name="profilePhoto">
                    </div>
                    <div class="form-group">
                        <label for="edit-username">Username</label>
                        <input type="text" id="edit-username" name="username" value="<%= user.username %>" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-name">Name</label>
                        <input type="text" id="edit-name" name="name" value="<%= user.name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-email">Email</label>
                        <input type="email" id="edit-email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-password">Password</label>
                        <input type="password" id="edit-password" name="password" placeholder="New Password">
                    </div>
                    <div class="form-buttons">
                        <button type="submit" class="btn">Save Changes</button>
                        <a href="javascript:void(0);" class="btn cancel-btn" id="cancel-edit-btn">Cancel</a>
                    </div>
                </form>
            </section>              
                          
        </main>
                              
        <script>
        $(document).ready(() => {
            const $profileNavLink = $('#profile-nav-link');
            const $editProfileSection = $('#edit-profile-section');
            const $profileDetails = $('#profile-details');
            const $savedBlogs = $('#saved-blogs');
            const $myBlogs = $('#my-blogs');
            const $cancelEditBtn = $('#cancel-edit-btn');
            const $editProfileForm = $('#edit-profile-form');

            // Click event for Profile link to show Edit Profile form
            $profileNavLink.on('click', () => {
                $profileDetails.addClass('hidden'); // Hide the welcome message
                $savedBlogs.addClass('hidden'); // Hide saved blogs
                $myBlogs.addClass('hidden'); // Hide my blogs
                $editProfileSection.removeClass('hidden'); // Show edit profile form
            });

    // Click event for Cancel button to return to Profile view
            $cancelEditBtn.on('click', () => {
                $editProfileSection.addClass('hidden'); // Hide edit profile form
                $profileDetails.removeClass('hidden'); // Show welcome message
                $savedBlogs.removeClass('hidden'); // Show saved blogs
                $myBlogs.removeClass('hidden'); // Show my blogs
            });
          
            $('#edit-profile-photo').on('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        $('#profile-picture-preview').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Handle profile update
            $('#edit-profile-form').on('submit', function (e) {
                e.preventDefault(); // Prevent page reload
                const formData = new FormData(this); // Use FormData to handle file uploads

                $.ajax({
                    url: '/profile',
                    method: 'PUT',
                    data: formData,
                    processData: false,  // Let jQuery handle the data format
                    contentType: false,  // Let jQuery handle the content type
                    success: (response) => {
                        alert(response.message);
                        location.reload(); // Reload the page to show updated data
                    },
                    error: (error) => {
                        alert(`Error: ${error.responseJSON.message}`);
                    }
                });
            });
  
        });
    </script>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 TasteTrails. Crafted with love for food and travel enthusiasts.</p>
    <ul class="social-links">
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Instagram</a></li>
      <li><a href="#">Twitter</a></li>
    </ul>
  </footer>
</body>
</html>