<%- include('layout', {
  title: 'Explore | TasteTrails',
  body: `
    <section class="header">
      <h1>Explore TasteTrails</h1>
      <p>Find the best blogs, destinations, and food recommendations here.</p>
      <form class="search-filter" method="GET" action="/explore">
        <input type="text" name="search" placeholder="Search for blogs or destinations...">
        <button class="btn-primary" type="submit">Search</button>
      </form>
    </section>

    <section class="content-grid">
      ${blogs.map(blog => `
        <div class="content-item">
          <img src="${blog.imageUrl || 'https://via.placeholder.com/300x200'}" alt="${blog.title}">
          <h3>${blog.title}</h3>
          <p>${blog.content.substring(0, 100)}...</p>
          <p><strong>Destination:</strong> ${blog.destination}</p>
          <p><strong>Rating:</strong> ${blog.rating}</p>
          <p><strong>Likes:</strong> ${blog.likes}</p>
          <a href="/blogs/${blog._id}" class="btn-secondary">Read More</a>

          <!-- Show delete button only if user is admin -->
          <% if (user && user.role === 'admin') { %>
            <form action="/blogs/delete/<%= blog._id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn-danger">Delete</button>
            </form>
          <% } %> <!-- Close the 'if' block here -->
        </div>
      `).join('')}
    </section>
  `
}) %>
